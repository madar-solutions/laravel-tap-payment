{
    "name": "madar-solutions/laravel-tap-payment",
    "description": "Laravel package for Tap Payment integration",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",                       // Update PHP to ^8.1
        "illuminate/support": "^10.0 || ^11.0",  // Support Laravel 10 and Laravel 11
        // Add other required dependencies here
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0 || ^10.0"   // Ensure testing works with PHP 8.x
    },
    "autoload": {
        "psr-4": {
            "MadarSolutions\\TapPayment\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MadarSolutions\\TapPayment\\TapPaymentServiceProvider"
            ],
            "aliases": {
                "TapPayment": "MadarSolutions\\TapPayment\\Facades\\TapPayment"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
